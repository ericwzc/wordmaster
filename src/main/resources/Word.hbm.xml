<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.words.hbm">

    <class name="Sentence" table="SENTENCES">
        <id name="id" column="SENTENCE_ID">
            <generator class="uuid"/>
        </id>
        <version name="version" access="field" column="OBJ_VERSION" />
        <property name="english" type="string" not-null="true"/>
        <property name="chinese" type="string" not-null="true"/>
        <many-to-one name="word" column="WORD_ID" class="Sentence">
        </many-to-one>
    </class>

    <class name="Word" table="WORDS">
        <id name="id" column="WORD_ID">
            <generator class="uuid"/>
        </id>
        <version name="version" access="field" column="OBJ_VERSION" />
        <property name="name" type="string" not-null="true"/>
        <set name="sentences" inverse="true" cascade="save-update">
            <key column="WORD_ID" />
            <one-to-many class="Sentence" />
        </set>
    </class>

</hibernate-mapping>
