<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.words.hbm">

    <class name="Sentence" table="SENTENCES">
        <id name="id" column="SENTENCE_ID">
            <generator class="uuid"/>
        </id>
        <version name="version" access="field" column="OBJ_VERSION" />
        <property name="english" type="string" not-null="true"/>
        <property name="chinese" type="string" not-null="true"/>
        <many-to-one name="word" class="Word" column="WORD_ID" not-null="true"/>
        <join table="TASKS_SENTENCES">
            <key column="SENTENCE_ID"/>
            <many-to-one name="task" column="TASK_ID" not-null="true" />
        </join>
    </class>

    <class name="Plan" table="PLANS">
        <id name="id" column="PLAN_ID">
            <generator class="uuid"/>
        </id>
        <version name="version" access="field" column="OBJ_VERSION" />
        <property name="startDate" type="date" not-null="true"/>
        <property name="number" type="int" not-null="true"/>
        <!-- bidretional one to one -->
        <many-to-one name="user" class="User" unique="true" not-null="true"/>
        <set name="tasks" inverse="true" cascade="save-update, delete">
            <key column="PLAN_ID" />
            <one-to-many class="Task"/>
        </set>
    </class>

    <class name="Word" table="WORDS">
        <id name="id" column="WORD_ID">
            <generator class="uuid"/>
        </id>
        <version name="version" access="field" column="OBJ_VERSION" />
        <property name="name" type="string" not-null="true"/>
        <set name="sentences" inverse="true" cascade="save-update">
            <key column="WORD_ID" />
            <one-to-many class="Sentence" />
        </set>
    </class>

    <class name="User" table="USERS">
        <id name="id" column="USER_ID">
            <generator class="uuid"/>
        </id>
        <version name="version" access="field" column="OBJ_VERSION"/>
        <property name="name" type="string" column="NAME"/>
        <!-- bidretional one to one -->
        <one-to-one name="plan" class="Plan" property-ref="user" cascade="save-update, delete"/>
    </class>

    <class name="Task" table="TASKS">
        <id name="id" type="string" column="TASK_ID">
            <generator class="uuid"/>
        </id>
        <version name="version" type="int" access="field" column="OBJ_VERSION"/>
        <property name="deadLine" type="date" column="DEADLINE" not-null="true" />
        <many-to-one name="plan" class="Plan" column="PLAN_ID" not-null="true"/>
        <set name="sentences" cascade="save-update, delete" inverse="true">
            <key column="TASK_ID" />
            <one-to-many class="Sentence" />
        </set>
    </class>

</hibernate-mapping>
